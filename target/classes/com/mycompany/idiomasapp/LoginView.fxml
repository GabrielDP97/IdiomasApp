<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" fx:controller="com.mycompany.idiomasapp.LoginController">
   <children>
      <Label layoutX="200.0" layoutY="50.0" text="Inicio de Sesión" />
      <Label fx:id="messageLabel" layoutX="100.0" layoutY="50.0" text="" />
      <TextField fx:id="usernameField" layoutX="200.0" layoutY="100.0" promptText="Nombre de usuario" />
      <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="150.0" promptText="Contraseña" />
      <Button fx:id="loginButton" layoutX="250.0" layoutY="200.0" text="Iniciar sesión" onAction="#handleLogin" />
      <Button fx:id="newUserButton" layoutX="250.0" layoutY="250.0" text="Crear nuevo usuario" onAction="#handleNewUser" />
	  

   </children>
</AnchorPane>
