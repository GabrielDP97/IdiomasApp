<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.idiomasapp.UserSelectionController">
    <children>
        <Label layoutX="200" layoutY="50" text="Seleccionar Usuario" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="100" promptText="Nombre de usuario" />
        <Button fx:id="loadButton" layoutX="150" layoutY="150" text="Cargar Progreso" onAction="#handleLoad" />
        <Button fx:id="newButton" layoutX="250" layoutY="150" text="Nuevo Usuario" onAction="#handleNew" />
    </children>
</AnchorPane>
