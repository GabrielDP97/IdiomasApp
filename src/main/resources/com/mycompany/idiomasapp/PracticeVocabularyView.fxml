<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.idiomasapp.PracticeVocabularyController">
    <children>
        <!-- Etiqueta para la palabra a traducir -->
        <Label fx:id="wordLabel" layoutX="200.0" layoutY="50.0" text="Palabra a traducir" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
		
        <Label fx:id="timerLabel" layoutX="400.0" layoutY="20.0" text="Tiempo: 30s" style="-fx-font-size: 16px; -fx-text-fill: red;" />

	<Label fx:id="scoreLabel" layoutX="20.0" layoutY="20.0" text="Puntuación: 0" style="-fx-font-size: 16px; -fx-text-fill: blue;" />


        <!-- Botón de opción 1 -->
        <Button fx:id="option1Button" layoutX="200.0" layoutY="100.0" onAction="#handleOption1" text="Opción 1" />

        <!-- Botón de opción 2 -->
        <Button fx:id="option2Button" layoutX="200.0" layoutY="150.0" onAction="#handleOption2" text="Opción 2" />

        <!-- Botón de opción 3 -->
        <Button fx:id="option3Button" layoutX="200.0" layoutY="200.0" onAction="#handleOption3" text="Opción 3" />

        <!-- Botón de opción 4 -->
        <Button fx:id="option4Button" layoutX="200.0" layoutY="250.0" onAction="#handleOption4" text="Opción 4" />

        <!-- Etiqueta para feedback -->
        <Label fx:id="feedbackLabel" layoutX="200.0" layoutY="300.0" text="" style="-fx-text-fill: green;" />

        <!-- Botón de siguiente -->
        <Button fx:id="nextButton" layoutX="150.0" layoutY="350.0" onAction="#handleNext" text="Siguiente" />

        <!-- Botón de volver -->
        <Button fx:id="backButton" layoutX="350.0" layoutY="350.0" onAction="#handleBack" text="Volver" />
    </children>
</AnchorPane>
